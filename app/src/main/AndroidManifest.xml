<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lmq.tongdao">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MarkActivity"
            android:label="@string/title_activity_mark"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RecommendActivity"
            android:label="@string/title_activity_recommend" />
        <activity
            android:name=".FriendActivity"
            android:label="@string/title_activity_friend" />
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info" />
        <activity
            android:name=".SendAddFriendMsgActivity"
            android:label="@string/title_activity_send_add_friend_msg" />
        <activity android:name=".ShowMessage" />
        <activity android:name=".ApplyAddFriendMessageActivity"></activity>
    </application>

</manifest>